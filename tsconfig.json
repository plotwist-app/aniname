{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext", // Match module resolution
    "moduleResolution": "NodeNext",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "api/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}